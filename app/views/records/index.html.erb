
<ul class="nav nav-tabs" role="tablist">
<li class="active"><%= link_to "View", records_path %></li>
<li><%= link_to new_record_path, :class => "btn btn-success" do %>
 <i class="glyphicon glyphicon-plus"></i>New Article 
</li><% end %>
<li><%= link_to "Deleted Articles", deleted_path %></li>
<li><%= link_to "Published", display_path %></li>
</ul>

 <div>
  <table class="table table_striped" >
    <thead>
    <tr>
     <th>User Name</th>
     <th>Article Name</th>
    </tr>
    </thead>
  
 
   <% @records.each do |a| %>
    <tr>
     <td> 
     <% if a.name %>
  <button type="button" class="btn btn-link has-popover" data-toggle="popover" title="Article Name" data-content="<%= a.name %>"><%= a.username %></button>
<% end %>
 </td>
     <td><span class="has-tooltip" data-toggle="tooltip" title="<%= "Created on #{a.created_at.strftime("%m/%e/%Y at %w:%M %p")}, Last modified on #{a.updated_at.strftime("%m/%e/%Y at %w:%M %p")}" %>"><% if a.name? %>
 <%= a.name %>
<% end %></span></td>
     
      <td>   <% if can? :edit, a %>
     <%= link_to "edit", edit_record_path(a) %>
       <% end %></td>
       
     <td><%= link_to "show", record_path(a) %></td>
      <td> <% if can? :destroy, a %>
     <%= link_to "delete", record_path(a), method: :delete, data: { confirm: 'Are u sure? ' } %>
   <% end %></td>
       <td><% if can? :destroyed, a %>
   <td><%= link_to "destroy", records_destroyed_path(a), data: { confirm: 'Are u sure? ' } %></td>
      <% end %>
  <% end %>
  </tr>

</table>
  </div>
<br>
<%= will_paginate @records %>

